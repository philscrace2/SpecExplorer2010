<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vs="clr-namespace:Microsoft.VisualStudio.PlatformUI"
                    xmlns:vsfx="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.10.0"
                    x:Uid="ResourceDictionary_1">
  <Style x:Uid="Style_1" TargetType="{x:Type vs:DialogWindowBase}"
         BasedOn="{StaticResource {x:Type Window}}">
    <Setter x:Uid="Setter_1" Property="Control.Background"
            Value="{DynamicResource {x:Static vsfx:VsBrushes.ThreeDFaceKey}}"/>
    <Setter x:Uid="Setter_2" Property="TextElement.FontSize"
            Value="{DynamicResource VsFont.EnvironmentFontSize}"/>
    <Setter x:Uid="Setter_3" Property="TextElement.FontFamily"
            Value="{DynamicResource VsFont.EnvironmentFontFamily}"/>
    <Setter x:Uid="Setter_4" Property="FrameworkElement.UseLayoutRounding" Value="true"/>
    <Setter x:Uid="Setter_5" Property="TextOptions.TextFormattingMode" Value="Display"/>
  </Style>
</ResourceDictionary>