<Window x:Class="Microsoft.SpecExplorer.assistedprocedures.GenericUserControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="380" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        ShowInTaskbar="false">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Grid Name="userControlContainer" Row="0" Margin="8"/>
    <Separator Grid.Row="1"/>
    <StackPanel Grid.Row="2" Margin="8" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Click="OKButtonClick" Content="OK" Width="80" Margin="0,0,4,0"/>
    </StackPanel>
  </Grid>
</Window>